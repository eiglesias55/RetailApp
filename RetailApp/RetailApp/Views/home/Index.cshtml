@{
    Layout = null;
    ViewBag.Title = "RetailApp";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Icon -->
    <link rel="icon" href="../Content/Media/Img/icon_gA.png" type="image/png">

    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/Media/Bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Media/Bootstrap/css/bootstrap-theme.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Media/css/signin2.css")" rel="stylesheet" />

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Content/Media/Bootstrap/js/bootstrap.min.js")"></script>
    
    <script type="text/javascript" src="../Content/Media/Bootstrap/js/button_functions.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <!--login modal-->
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center"><img src="../Content/Media/Img/gA_logo.jpg" width="250" height="200" /></h1>
                </div>
                <div id="modal-toSlide">
                    <div id="modal-fb">
                        <div class="modal-body">
                            <button class="button" onclick="checkFacebookLogin('@ViewBag.userEmail');">
                                <div class="custom-logo">f</div><div class="custom-button">Entrar con facebook</div>
                            </button>
                        </div>
                        <div class="modal-footer">
                            <span class="pull-right"><a id="logFB" href="#" class="link-style">No deseas entrar con facebook?</a></span>
                        </div>
                    </div>

                    <div id="modal-email">
                        <div class="modal-body">                       
                                <div id='email-title'>
                                    <label for='inputEmail3'>Dirección de Email</label>
                                </div>
                                <form action="@Url.Action("EmailLogin","Home")" method="post">
                                    <div class='text-center' id='email-box'>
                                        <input type='text' class='form-control' name="Email" placeholder='Ingresa tu email' value=''>
                                    </div>
                                    <div style="margin-top:0.5em" class='text-center'>
                                        <input type='submit' value='Enviar' class='email-button' />
                                        <input type="hidden" name="Token" value="@Response.Cookies["Token"].Value" />
                                    </div>
                                </form>

                        </div>
                        <div class="modal-footer">
                            <span class="pull-right"><a id="logEmail" href='#' class='link-style'>Volver a entrar con facebook?</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="fb-root"></div>
    <div id="status"></div>
    <script type="text/javascript" src="../Content/Media/Bootstrap/js/fbLogin.js"></script>
</body>
</html>